<h1>Categories</h1>
<h3><%= link_to 'New category',new_category_path%></h3>
<% @categories.each do |category|%>
	<h2><%= category.name%></h2>
	<%= link_to 'More details',category_path(category)%>
	<%= link_to 'Edit category',edit_category_path(category)%>
	<%= link_to 'Destroy category',category_path(category),data:{method: :delete,confirm:'Are you sure?'}%>
<%end%>