<h1>MENU</h1>
<h1>Categories</h1>
<% @categories.each do |category|%>
	<h2><%= category.name%></h2>
	<%= link_to 'More details',category_path(category)%>
	<%= link_to 'Edit category',edit_category_path(category)%>
	<%= link_to 'Destroy category',category_path(category),data:{method: :delete,confirm:'Are you sure?'}%>
	<% @dishes.each do |dish|%>
		<%if category.id == dish.category_id%>
			<h4><%= dish.name%> <%=dish.units%> <%=dish.measure_id%> <%=dish.measure_id%></h4>
			<%= link_to 'More details',dish_path(dish)%>
			<%= link_to 'Edit dish',edit_dish_path(dish)%>
			<%= link_to 'Destroy dish',dish_path(dish),data:{method: :delete,confirm:'Are you sure?'}%>
		<%end%>
	<%end%>
<%end%>
